@model List<LoanManagementSystem.Models.LeadDocument>
@{
    ViewData["Title"] = "Documents for Lead";
    int? leadId = ViewBag.LeadId as int?;
}
<h3>
    @if (leadId.HasValue)
    {
        <text>üìÑ Uploaded Documents for Lead @leadId</text>
    }
    else
    {
        <text>üìÑ All Uploaded Documents</text>
    }
</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Type</th>
            <th>File</th>
            <th>Uploaded By</th>
            <th>Status</th>
            <th>Uploaded At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doc in Model)
        {
            <tr>
                <td>@doc.DocumentType</td>
                <td><a href="@doc.FilePath" target="_blank">@doc.FileName</a></td>
                <td>@doc.UploadedByUser?.FullName</td>
                <td>@doc.Status</td>
                <td>@doc.UploadedAt.ToString("g")</td>
                <td>
                    <form asp-action="Delete" method="post" asp-controller="LeadDocuments">
                        <input type="hidden" name="id" value="@doc.DocId" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (leadId.HasValue)
{
    <a class="btn btn-secondary" href="/Lead/Details/@leadId">‚Üê Back to Lead</a>
}
else
{
    <a class="btn btn-secondary" href="/Admin/Dashboard">‚Üê Back to Dashboard</a>
}
