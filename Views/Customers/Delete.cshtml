@model LoanManagementSystem.Models.Customer
@{
    ViewData["Title"] = "Delete Customer";
}

<style>
    /* Main Container - Permanent Effects */
    .universal-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2.5rem;
        color: white;
        background: linear-gradient(90deg, 
            rgb(0, 0, 0), 
            rgb(34, 32, 142), 
            rgb(0, 0, 0));
        background-size: 200% 200%;
        font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
        border-radius: 30px;
        animation: gradientFlow 3s ease infinite, 
                   pulseShadow 1.5s ease infinite alternate,
                   gentleFloat 4s ease-in-out infinite;
        transform: perspective(500px) translateZ(20px);
        box-shadow: 0 10px 25px rgba(34, 32, 142, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    /* Header - Permanent Underline */
    .page-header {
        position: relative;
        display: inline-block;
        padding-bottom: 5px;
        margin-bottom: 1.5rem;
    }

    .page-header::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 3px;
        background: linear-gradient(90deg, #e74c3c, #c0392b);
    }

    /* Warning Card */
    .warning-card {
        background: rgba(231, 76, 60, 0.2);
        border: 1px solid rgba(231, 76, 60, 0.5);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .warning-card h4 {
        color: #ff8a80;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .warning-card p {
        margin-bottom: 0;
    }

    /* Detail List */
    .detail-list dt {
        font-weight: 600;
        color: #a78bfa;
        padding: 0.25rem 0;
    }

    .detail-list dd {
        padding: 0.25rem 0;
        color: #e2e2e2;
    }

    /* Buttons */
    .btn-custom {
        padding: 0.7rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .btn-danger-custom {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
        color: white;
    }

    .btn-secondary-custom {
        background: linear-gradient(135deg, #6b7280, #4b5563);
        color: white;
    }

    .btn-custom:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

    /* Button Container */
    .button-container {
        display: flex;
        gap: 0.8rem;
        margin-top: 1.5rem;
    }

    /* Animations */
    @@keyframes gradientFlow {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    @@keyframes pulseShadow {
        0% { box-shadow: 0 5px 15px rgba(34, 32, 142, 0.3); }
        100% { box-shadow: 0 15px 30px rgba(34, 32, 142, 0.5); }
    }

    @@keyframes gentleFloat {
        0%, 100% { transform: perspective(500px) translateZ(10px); }
        50% { transform: perspective(500px) translateZ(20px); }
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .universal-container {
            padding: 1.5rem;
            margin: 1rem;
            border-radius: 20px;
        }

        .button-container {
            flex-direction: column;
            gap: 0.5rem;
        }

        .btn-custom {
            width: 100%;
            padding: 0.8rem;
            font-size: 0.95rem;
        }

        .detail-list dt,
        .detail-list dd {
            padding: 0.5rem 0;
        }
    }
</style>

<div class="universal-container">
    <h2 class="page-header">Delete Customer</h2>
    
    <div class="warning-card">
        <h4>⚠️ Are you sure you want to delete this customer?</h4>
        <p>This action cannot be undone. All customer data will be permanently removed.</p>
    </div>
    
    <div class="row">
        <div class="col-md-6">
            <dl class="detail-list">
                <dt>Name:</dt>
                <dd>@Model.FullName</dd>

                <dt>Email:</dt>
                <dd>@Model.Email</dd>

                <dt>Phone:</dt>
                <dd>@Model.Phone</dd>
            </dl>
        </div>
        <div class="col-md-6">
            <dl class="detail-list">
                <dt>Occupation:</dt>
                <dd>@Model.Occupation</dd>

                <dt>Created On:</dt>
                <dd>@Model.CreatedAt.ToLocalTime().ToString("g")</dd>
            </dl>
        </div>
    </div>

    <form asp-action="DeleteConfirmed" class="mt-4">
        <input type="hidden" asp-for="CustomerId" />
        <div class="button-container">
            <button type="submit" class="btn-custom btn-danger-custom">
                <i class="bi bi-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn-custom btn-secondary-custom">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </div>
    </form>
</div>