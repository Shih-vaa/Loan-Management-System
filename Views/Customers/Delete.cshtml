@model LoanManagementSystem.Models.Customer
@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h2>Delete Customer</h2>
        </div>
        <div class="card-body">
            <h4 class="text-danger">Are you sure you want to delete this customer?</h4>
            
            <div class="row mt-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Phone:</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Occupation:</dt>
                        <dd class="col-sm-8">@Model.Occupation</dd>

                        <dt class="col-sm-4">Created On:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToLocalTime().ToString("g")</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <form asp-action="DeleteConfirmed">
                <input type="hidden" asp-for="CustomerId" />
                <button type="submit" class="btn btn-danger">Confirm Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>