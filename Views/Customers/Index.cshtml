@model IEnumerable<LoanManagementSystem.Models.Customer>
@{
    ViewData["Title"] = "Customers";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Customer List</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Customer
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Contact</th>
                        @* <th>Occupation</th>
                        <th>Income</th>
                        <th>Created</th> *@
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Where(c => !c.IsDeleted))
                    {
                        <tr>
                            <td style="width: 120px;">
                                @if (!string.IsNullOrEmpty(item.PassportPhotoPath))
                                {
                                    <img src="@Url.Content(item.PassportPhotoPath)" alt="Customer Photo"
                                        class="img-thumbnail preview-image"
                                        style="width: 50px; height: 50px; object-fit: cover; cursor: pointer;"
                                        data-fullsize="@Url.Content(item.PassportPhotoPath)" />
                                }
                                else
                                {
                                    <div class="text-muted"
                                        style="width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;">
                                        <i class="bi bi-person" style="font-size: .9rem;">No photo

                                        </i>
                                    </div>
                                }
                            </td>
                            <td>@item.FullName</td>
                            <td>
                                <div>@item.Email</div>
                                <small class="text-muted">@item.Phone</small>
                            </td>
                            @* <td>@item.Occupation</td>
                            <td>@(item.AnnualIncome?.ToString("C") ?? "N/A")</td>
                            <td>@item.CreatedAt.ToShortDateString()</td> *@
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-outline-primary"
                                        title="Edit">
                                        <i class="bi bi-pencil">Edit</i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-outline-info"
                                        title="Details">
                                        <i class="bi bi-eye">Full Details</i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-outline-danger"
                                        title="Delete">
                                        <i class="bi bi-trash">Delete</i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Fullscreen Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content bg-transparent border-0">
            <div class="modal-header border-0">
                <button type="button" class="btn btn-secondary btn-sm back-button" id="backButton">
                    ‚Üê <!-- Left arrow symbol -->
                </button>

            </div>
            <div class="modal-body text-center p-0">
                <img id="fullSizeImage" src="" class="img-fluid" style="max-height: 80vh; margin: 0 auto;">
            </div>
        </div>
    </div>
</div>


@section Styles {
    <style>
        #imageModal {
            background-color: rgba(0, 0, 0, 0.9);
            cursor: pointer;
            /* Shows it's clickable */
        }

        #imageModal .modal-content {
            background: transparent;
            border: none;
            cursor: default;
            /* Normal cursor over content */
            display: inline-block;
            /* Makes content only as wide as needed */
        }

        #imageModal .modal-dialog {
            text-align: center;
            /* Centers the image */
            margin: 0 auto;
            pointer-events: none;
            /* Allows clicks to pass through */
        }

        #imageModal .modal-body {
            padding: 0;
            display: inline-block;
            pointer-events: auto;
            /* Re-enable pointer events for content */
        }

        .preview-image {
            transition: transform 0.2s;
        }

        .preview-image:hover {
            transform: scale(1.05);
        }

        /* Back button styling */
        .back-button {
            background-color: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0;
            transition: all 0.2s;
        }

        .back-button:hover {
            background-color: rgba(255, 255, 255, 0.3);
            transform: scale(1.1);
        }

        /* Adjust modal body padding */
        #imageModal .modal-body {
            padding-top: 20px;
            /* Reduced space since button is smaller */
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Image click to show modal
            document.querySelectorAll('.preview-image').forEach(function (img) {
                img.addEventListener('click', function (e) {
                    const fullSizeUrl = img.getAttribute('data-fullsize');
                    const fullSizeImage = document.getElementById('fullSizeImage');
                    fullSizeImage.src = fullSizeUrl;

                    const imageModal = new bootstrap.Modal(document.getElementById('imageModal'));
                    imageModal.show();
                });
            });

            // Back button functionality
            document.getElementById('backButton').addEventListener('click', function () {
                // Close the modal
                const modal = bootstrap.Modal.getInstance(document.getElementById('imageModal'));
                modal.hide();

                // Scroll to top of the page (optional)
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });

            // ESC key closes modal
            document.addEventListener('keyup', function (e) {
                if (e.key === "Escape") {
                    const modalEl = document.getElementById('imageModal');
                    const modalInstance = bootstrap.Modal.getInstance(modalEl);
                    if (modalInstance) {
                        modalInstance.hide();
                    }
                }
            });

            // Close modal when clicking outside the image
            document.getElementById('imageModal').addEventListener('click', function (e) {
                if (e.target === this) {
                    const modalInstance = bootstrap.Modal.getInstance(this);
                    modalInstance.hide();
                }
            });

            // Prevent clicks inside modal content from closing
            document.querySelector('.modal-content').addEventListener('click', function (e) {
                e.stopPropagation();
            });
        });
    </script>
}