@model IEnumerable<LoanManagementSystem.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<style>
    /* Main Container - Permanent Effects */
    .universal-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 2.5rem;
        color: white;
        background: linear-gradient(90deg, 
            rgb(0, 0, 0), 
            rgb(34, 32, 142), 
            rgb(0, 0, 0));
        background-size: 200% 200%;
        font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
        border-radius: 30px;
        animation: gradientFlow 3s ease infinite, 
                   pulseShadow 1.5s ease infinite alternate,
                   gentleFloat 4s ease-in-out infinite;
        transform: perspective(500px) translateZ(20px);
        box-shadow: 0 10px 25px rgba(34, 32, 142, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    /* Header - Permanent Underline */
    .page-header {
        position: relative;
        display: inline-block;
        padding-bottom: 5px;
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
    }

    .page-header::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 3px;
        background: linear-gradient(90deg, #6a11cb, #2575fc);
    }

    /* Table Styling */
    .custom-table {
        width: 100%;
        border-collapse: collapse;
        margin: 1.5rem 0;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

    .custom-table thead {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
    }

    .custom-table th,
    .custom-table td {
        padding: 1rem;
        text-align: left;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .custom-table th {
        font-weight: 600;
        position: relative;
    }

    .custom-table th:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background: rgba(255, 255, 255, 0.3);
    }

    /* Status Badges */
    .badge-custom {
        padding: 0.35rem 0.65rem;
        border-radius: 50rem;
        font-weight: 500;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
        display: inline-block;
        color: white;
    }

    .bg-success-custom {
        background: linear-gradient(135deg, #2ecc71, #27ae60);
    }

    .bg-danger-custom {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
    }

    /* Buttons */
    .btn-custom {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        display: inline-flex;
        align-items: center;
        gap: 0.3rem;
        color: white;
    }

    .btn-info-custom {
        background: linear-gradient(135deg, #17a2b8, #138496);
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
    }

    .btn-success-custom {
        background: linear-gradient(135deg, #28a745, #218838);
    }

    .btn-danger-custom {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
    }

    .btn-custom:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

    /* Action Buttons Container */
    .action-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        justify-content: flex-end;
    }

    /* Header Action Container */
    .header-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    /* Animations */
    @@keyframes gradientFlow {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    @@keyframes pulseShadow {
        0% { box-shadow: 0 5px 15px rgba(34, 32, 142, 0.3); }
        100% { box-shadow: 0 15px 30px rgba(34, 32, 142, 0.5); }
    }

    @@keyframes gentleFloat {
        0%, 100% { transform: perspective(500px) translateZ(10px); }
        50% { transform: perspective(500px) translateZ(20px); }
    }

    /* Hide cards by default (desktop/tablet) */
    .customer-cards {
        display: none;
    }

    /* Mobile: Card Layout */
    @@media (max-width: 767px) {
        .custom-table {
            display: none;
        }

        .customer-cards {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .customer-card {
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 12px;
            background: rgba(255, 255, 255, 0.1);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 1.2rem;
            display: flex;
            flex-direction: column;
            gap: 0.8rem;
        }

        .customer-card div {
            font-size: 0.95rem;
        }

        .customer-card strong {
            color: #a78bfa;
        }

        .customer-card .action-buttons {
            justify-content: flex-start;
            margin-top: 0.5rem;
        }

        .header-actions {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }
    }

    /* Extra small: icons only */
    @@media (max-width: 480px) {
        .btn-custom {
            width: 40px;
            height: 40px;
            padding: 0;
            justify-content: center;
            font-size: 1rem;
        }

        .btn-custom span {
            display: none;
        }
        
        .universal-container {
            padding: 1.5rem;
            margin: 1rem;
            border-radius: 20px;
        }
        
        .page-header {
            font-size: 1.5rem;
        }
    }
</style>

<div class="universal-container">
    <div class="header-actions">
        <h2 class="page-header">Customers</h2>
        <a asp-action="Create" class="btn-custom btn-success-custom">
            <i class="bi bi-plus-circle"></i> <span>Add New Customer</span>
        </a>
    </div>

    <!-- Table for desktop -->
    <div class="table-container">
        <table class="custom-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr style="@(customer.IsDeleted ? "opacity: 0.8;" : "")">
                        <td>@customer.FullName</td>
                        <td>@customer.Email</td>
                        <td>@customer.Phone</td>
                        <td>
                            @if (customer.IsDeleted)
                            {
                                <span class="badge-custom bg-danger-custom">Deleted</span>
                            }
                            else
                            {
                                <span class="badge-custom bg-success-custom">Active</span>
                            }
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Details" asp-route-id="@customer.CustomerId"
                                    class="btn-custom btn-info-custom" title="View">
                                    <i class="bi bi-eye"></i> <span>View</span>
                                </a>
                                @if (!customer.IsDeleted)
                                {
                                    <a asp-action="Edit" asp-route-id="@customer.CustomerId"
                                        class="btn-custom btn-primary-custom" title="Edit">
                                        <i class="bi bi-pencil"></i> <span>Edit</span>
                                    </a>
                                    @if (User.IsInRole("admin"))
                                    {
                                        <a asp-action="Delete" asp-route-id="@customer.CustomerId"
                                            class="btn-custom btn-danger-custom" title="Delete">
                                            <i class="bi bi-trash"></i> <span>Delete</span>
                                        </a>
                                    }
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Card layout for mobile -->
    <div class="customer-cards">
        @foreach (var customer in Model)
        {
            <div class="customer-card" style="@(customer.IsDeleted ? "opacity: 0.8;" : "")">
                <div><strong>Name:</strong> @customer.FullName</div>
                <div><strong>Email:</strong> @customer.Email</div>
                <div><strong>Phone:</strong> @customer.Phone</div>
                <div>
                    <strong>Status:</strong>
                    @if (customer.IsDeleted)
                    {
                        <span class="badge-custom bg-danger-custom">Deleted</span>
                    }
                    else
                    {
                        <span class="badge-custom bg-success-custom">Active</span>
                    }
                </div>
                <div class="action-buttons">
                    <a asp-action="Details" asp-route-id="@customer.CustomerId"
                        class="btn-custom btn-info-custom" title="View">
                        <i class="bi bi-eye"></i> <span>View</span>
                    </a>
                    @if (!customer.IsDeleted)
                    {
                        <a asp-action="Edit" asp-route-id="@customer.CustomerId"
                            class="btn-custom btn-primary-custom" title="Edit">
                            <i class="bi bi-pencil"></i> <span>Edit</span>
                        </a>
                        @if (User.IsInRole("admin"))
                        {
                            <a asp-action="Delete" asp-route-id="@customer.CustomerId"
                                class="btn-custom btn-danger-custom" title="Delete">
                                <i class="bi bi-trash"></i> <span>Delete</span>
                            </a>
                        }
                    }
                </div>
            </div>
        }
    </div>
</div>