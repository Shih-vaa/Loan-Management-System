@model List<LoanManagementSystem.Models.LeadDocument>

@{
    ViewData["Title"] = "Re-upload Rejected Documents";
    var lead = ViewBag.Lead as LoanManagementSystem.Models.Lead;
}

<div class="container mt-4">
    <h2>ðŸ“¤ Re-upload Rejected Documents</h2>
    <p class="text-muted">Lead: LMS-@lead?.LeadId.ToString("D4") | Customer: @lead?.Customer?.FullName</p>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-success">No rejected documents found. All documents are either approved or pending.</div>
    }
    else
    {
        <form asp-action="ReuploadDocuments" asp-controller="Calling" method="post" enctype="multipart/form-data">
            <input type="hidden" name="leadId" value="@lead?.LeadId" />
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Document Type</th>
                        <th>Previous File</th>
                        <th>Remarks</th>
                        <th>Re-upload</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var doc = Model[i];
                        <tr>
                            <td>
                                @doc.DocumentType
                                <input type="hidden" name="documentIds" value="@doc.DocId" />
                                <input type="hidden" name="types" value="@doc.DocumentType" />
                            </td>
                            <td><a href="@doc.FilePath" target="_blank">@doc.FileName</a></td>
                            <td>@doc.Remarks</td>
                            <td>
                                <input type="file" name="files" class="form-control" required />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <button type="submit" class="btn btn-primary">Submit Re-upload</button>
            <a href="/Calling/Dashboard" class="btn btn-secondary">Cancel</a>
        </form>
    }
</div>
