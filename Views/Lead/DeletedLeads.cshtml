@model IEnumerable<LoanManagementSystem.Models.Lead>

<h2>Deleted Leads</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Lead ID</th>
            <th>Customer</th>
            <th>Assigned User</th>
            <th>Lead Generator</th>
            <th>Date Deleted</th>
            <th>Status Before Deletion</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var lead in Model)
    {
        <tr>
            <td>@lead.LeadId</td>
            <td>@lead.Customer.FullName (@lead.Customer.Email)</td>
            <td>@lead.AssignedUser?.FullName</td>
            <td>@lead.LeadGenerator?.FullName</td>
            <td>@lead.DateDeleted?.ToString("dd-MMM-yyyy HH:mm")</td>
            <td>@lead.Status</td>
        </tr>
    }
    </tbody>
</table>
