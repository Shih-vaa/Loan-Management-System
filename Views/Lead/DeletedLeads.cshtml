@model IEnumerable<LoanManagementSystem.Models.Lead>

<style>
/* ===== Universal Container ===== */
.deleted-leads-container {
    max-width: 1200px;
    margin: 2rem auto;
    padding: 2rem;
    background: linear-gradient(90deg, rgb(0, 0, 0), rgb(34, 32, 142), rgb(0, 0, 0));
    background-size: 300% 300%; /* ðŸ”¹ Needed for gradient swing */
    color: white;
    border-radius: 20px;
    box-shadow: 0 10px 25px rgba(34, 32, 142, 0.3);
    backdrop-filter: blur(5px);
    font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
    animation: gradientFlow 8s ease infinite, pulse 5s ease-in-out infinite;
}

/* ===== Header ===== */
.deleted-leads-container h2 {
    text-align: center;
    margin-bottom: 1.5rem;
    position: relative;
    display: inline-block;
}
.deleted-leads-container h2::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, #6a11cb, #2575fc);
}

/* ===== Table Styling ===== */
.custom-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    overflow: hidden;
}

.custom-table thead {
    background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
    color: white;
    position: sticky;
    top: 0;
}

.custom-table th, .custom-table td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.custom-table tbody tr:hover {
    background: rgba(255, 255, 255, 0.08);
}

/* ===== Animations ===== */
@@keyframes gradientFlow {
    0% { background-position: 0% 50% }
    50% { background-position: 100% 50% }
    100% { background-position: 0% 50% }
}

@@keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.02); }
}

/* ===== Mobile ===== */
@@media (max-width: 992px) {
    .custom-table, .custom-table thead, .custom-table tbody, .custom-table tr, .custom-table th, .custom-table td {
        display: block;
        width: 100%;
    }
    .custom-table thead { display: none; }
    .custom-table tr {
        margin-bottom: 1rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        padding: 1rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
    }
    .custom-table td {
        border: none;
        padding: 0.5rem 0;
    }
    .custom-table td::before {
        content: attr(data-label);
        font-weight: bold;
        display: block;
        color: #9dc9ff;
        margin-bottom: 0.3rem;
    }
}
</style>

<div class="deleted-leads-container">
    <h2>Deleted Leads</h2>

    <table class="custom-table">
        <thead>
            <tr>
                <th>Lead ID</th>
                <th>Customer</th>
                <th>Assigned User</th>
                <th>Lead Generator</th>
                <th>Date Deleted</th>
                <th>Status Before Deletion</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var lead in Model)
        {
            <tr>
                <td data-label="Lead ID">LMS-@lead.LeadId.ToString("D4")</td>
                <td data-label="Customer">@lead.Customer?.FullName (@lead.Customer?.Email)</td>
                <td data-label="Assigned User">@lead.AssignedUser?.FullName</td>
                <td data-label="Lead Generator">@lead.LeadGenerator?.FullName</td>
                <td data-label="Date Deleted">@lead.DateDeleted?.ToString("dd-MMM-yyyy HH:mm")</td>
                <td data-label="Status">@lead.Status</td>
            </tr>
        }
        </tbody>
    </table>
</div>
