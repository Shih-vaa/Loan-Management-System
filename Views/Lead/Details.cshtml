@model LoanManagementSystem.Models.Lead
@using LoanManagementSystem.Helpers
@inject LoanManagementSystem.Data.ApplicationDbContext _context
@{
    ViewData["Title"] = "Lead Details";
    bool canUploadDocs = PermissionHelper.HasTeamPermission(_context, Context, "CanUploadDocs");
    var isMarketing = User.IsInRole("marketing");
    var isAdmin = User.IsInRole("admin");
    var isOffice = User.IsInRole("office");
}

<div class="container mt-4">
    <h2>Lead Details</h2>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Lead ID</dt>
        <dd class="col-sm-9">LMS-@Model.LeadId.ToString("D4")</dd>

        <dt class="col-sm-3">Customer</dt>
        <dd class="col-sm-9">@Model.Customer?.FullName</dd>

        <dt class="col-sm-3">Loan Type</dt>
        <dd class="col-sm-9">@Model.LoanType</dd>

        <dt class="col-sm-3">Amount</dt>
        <dd class="col-sm-9">‚Çπ@Model.LoanAmount.ToString("N2")</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">Assigned To</dt>
        <dd class="col-sm-9">@Model.AssignedUser?.FullName</dd>
    </dl>

    @if (!isMarketing) // ‚úÖ Marketing role skips everything below
    {
        <hr />
        <h4>üìÑ Uploaded Documents</h4>

        @if (Model.Documents != null && Model.Documents.Any())
        {
            <table class="table table-sm table-bordered mt-3">
                <thead class="table-light">
                    <tr>
                        <th>Type</th>
                        <th>File</th>
                        <th>Status</th>
                        <th>Uploaded By</th>
                        <th>Uploaded At</th>
                        <th>Verified By</th>
                        <th>Verified At</th>
                        <th>Remarks</th>
                        @if (isAdmin || isOffice)
                        {
                            <th>Action</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doc in Model.Documents)
                    {
                        <tr>
                            <td>@doc.DocumentType</td>
                            <td><a href="@doc.FilePath" target="_blank">@doc.FileName</a></td>
                            <td>
                                @switch (doc.Status)
                                {
                                    case "approved":
                                        <span class="badge bg-success">‚úîÔ∏è Approved</span>
                                        break;
                                    case "rejected":
                                        <span class="badge bg-danger">‚ùå Rejected</span>
                                        break;
                                    default:
                                        <span class="badge bg-warning text-dark">‚è≥ Pending</span>
                                        break;
                                }
                            </td>
                            <td>@doc.UploadedByUser?.FullName</td>
                            <td>@doc.UploadedAt.ToString("g")</td>
                            <td>@doc.Verifier?.FullName</td>
                            <td>@doc.VerifiedAt?.ToString("g")</td>
                            <td>@doc.Remarks</td>

                            @if (isAdmin || isOffice)
                            {
                                <td>
                                    @if (doc.Status != "approved")
                                    {
                                        <form asp-controller="LeadDocuments" asp-action="Verify" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@doc.DocId" />
                                            <input type="hidden" name="status" value="approved" />
                                            <button type="submit" class="btn btn-sm btn-success">Approve</button>
                                        </form>
                                    }
                                    @if (doc.Status != "rejected")
                                    {
                                        <form asp-controller="LeadDocuments" asp-action="Verify" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@doc.DocId" />
                                            <input type="hidden" name="status" value="rejected" />
                                            <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                                        </form>
                                    }
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No documents uploaded yet.</p>
        }

        @if (isAdmin || canUploadDocs)
        {
            <hr />
            <h4>üìé Upload New Document</h4>
            <form method="post" enctype="multipart/form-data" asp-controller="LeadDocuments" asp-action="Create">
                <input type="hidden" name="leadId" value="@Model.LeadId" />

                <div class="mb-3">
                    <label class="form-label">Document Type</label>
                    <select name="documentType" class="form-control" required>
                        <option value="">-- Select --</option>
                        <option value="Aadhaar">Aadhaar</option>
                        <option value="PAN">PAN</option>
                        <option value="Salary Slip">Salary Slip</option>
                        <option value="Bank Statement">Bank Statement</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">File</label>
                    <input type="file" name="file" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-primary">Upload</button>
            </form>
        }
    }

    <div class="mt-4">
        <a class="btn btn-secondary" href="/Lead/Index">‚Üê Back to Leads</a>
    </div>
</div>
<style>
    .container {
        max-width: 800px;
        margin: auto;
        color: rgb(108, 107, 107);
        transition: all 0.8s ease;
        transform: translateZ(0);
        /* Hardware acceleration */
        will-change: transform, background;
        /* Optimize for animation */
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.18);
    }

    .container:hover {
        color: rgb(255, 255, 255);
        background: linear-gradient(90deg,
                rgb(0, 0, 0),
                rgb(34, 32, 142),
                rgb(0, 0, 0));
        background-size: 200% 200%;
        font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
        border-radius: 80px;

        /* Animation effects */
        animation: gradientFlow 3s ease infinite,
            pulseShadow 1.5s ease infinite alternate,
            gentleFloat 4s ease-in-out infinite;

        /* 3D transform effect */
        transform: perspective(500px) translateZ(20px);
        box-shadow: 0 10px 25px rgba(34, 32, 142, 0.3);
    }

    @@keyframes gradientFlow {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    @@keyframes pulseShadow {
        0% {
            box-shadow: 0 5px 15px rgba(34, 32, 142, 0.3);
        }

        100% {
            box-shadow: 0 15px 30px rgba(34, 32, 142, 0.5);
        }
    }

    @@keyframes gentleFloat {

        0%,
        100% {
            transform: perspective(500px) translateZ(10px);
        }

        50% {
            transform: perspective(500px) translateZ(20px);
        }
    }

    dl.row dt {
        font-weight: bold;
    }
</style>