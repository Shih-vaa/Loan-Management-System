@model LoanManagementSystem.Models.Lead
@{
    ViewData["Title"] = "Lead Details";
}

<div class="container mt-4">
    <h2>Lead Details</h2>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Lead ID</dt>
        <dd class="col-sm-9">@Model.LeadId</dd>

        <dt class="col-sm-3">Customer</dt>
        <dd class="col-sm-9">@Model.Customer?.FullName</dd>

        <dt class="col-sm-3">Loan Type</dt>
        <dd class="col-sm-9">@Model.LoanType</dd>

        <dt class="col-sm-3">Amount</dt>
        <dd class="col-sm-9">â‚¹@Model.LoanAmount.ToString("N2")</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">Assigned To</dt>
        <dd class="col-sm-9">@Model.AssignedUser?.FullName</dd>
    </dl>

    <div class="mt-4">
        @* Upload Document Button - Only for admin/calling/office *@
        @if (User.IsInRole("admin") || User.IsInRole("calling") || User.IsInRole("office"))
        {
            <a class="btn btn-primary me-2" href="/LeadDocuments/Create?leadId=@Model.LeadId">ðŸ“¤ Upload Document</a>
            <a class="btn btn-outline-dark me-2" href="/LeadDocuments/LeadDocs?leadId=@Model.LeadId">
    ðŸ“‚ View Uploaded Documents
</a>

        }

        <a class="btn btn-secondary" href="/Lead/Index">Back to Leads</a>
    </div>
</div>
