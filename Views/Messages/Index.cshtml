@model IEnumerable<LoanManagementSystem.Models.Message>
@{
    ViewData["Title"] = "Messages";
}

<div class="container mt-4 universal-container">
    <div class="header-actions d-flex justify-content-between align-items-center mb-3">
        <h2 class="page-title">ðŸ“¥ Inbox</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> New Message
        </a>
    </div>

    <!-- Inbox Section -->
    <div class="d-none d-md-block">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>From</th>
                    <th>Subject</th>
                    <th>Received At</th>
                    <th>Status</th>
                    <th style="width:150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var msg in Model)
                {
                    <tr>
                        <td>@msg.Sender?.FullName</td>
                        <td>@msg.Subject</td>
                        <td>@msg.CreatedAt.ToString("g")</td>
                        <td>
                            @if (msg.IsRead)
                            {
                                <span class="badge bg-success">Read</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Unread</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@msg.MessageId" class="btn btn-sm btn-info">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <form asp-action="Delete" asp-route-id="@msg.MessageId" method="post" style="display:inline;"
                                  onsubmit="return confirm('Are you sure you want to delete this message?');">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Outbox Section -->
    <div class="mt-5">
        <h2 class="page-title">ðŸ“¤ Outbox</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>To</th>
                    <th>Subject</th>
                    <th>Sent At</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var msg in ViewBag.Outbox as IEnumerable<LoanManagementSystem.Models.Message>)
                {
                    <tr>
                        <td>@msg.Recipient?.FullName</td>
                        <td>@msg.Subject</td>
                        <td>@msg.CreatedAt.ToString("g")</td>
                        <td>
                            @if (msg.IsRead)
                            {
                                <span class="badge bg-success">Opened</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Not Opened</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



<style>
    /* Main Container - Permanent Effects */
    .universal-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 2.5rem;
        color: white;
        background: linear-gradient(90deg,
                rgb(0, 0, 0),
                rgb(34, 32, 142),
                rgb(0, 0, 0));
        background-size: 200% 200%;
        font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
        border-radius: 30px;
        animation: gradientFlow 3s ease infinite,
            pulseShadow 1.5s ease infinite alternate,
            gentleFloat 4s ease-in-out infinite;
        transform: perspective(500px) translateZ(20px);
        box-shadow: 0 10px 25px rgba(34, 32, 142, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    /* Header - Permanent Underline */
    .page-header {
        position: relative;
        display: inline-block;
        padding-bottom: 5px;
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
    }

    .page-header::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 3px;
        background: linear-gradient(90deg, #6a11cb, #2575fc);
    }

    /* Table Styling */
    .custom-table {
        width: 100%;
        border-collapse: collapse;
        margin: 1.5rem 0;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

    .custom-table thead {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
    }

    .custom-table th,
    .custom-table td {
        padding: 1rem;
        text-align: left;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .custom-table th {
        font-weight: 600;
        position: relative;
    }

    .custom-table th:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background: rgba(255, 255, 255, 0.3);
    }

    /* Status Badges */
    .badge-custom {
        padding: 0.35rem 0.65rem;
        border-radius: 50rem;
        font-weight: 500;
        font-size: 0.75rem;
        letter-spacing: 0.5px;
        display: inline-block;
        color: white;
    }

    .bg-success-custom {
        background: linear-gradient(135deg, #2ecc71, #27ae60);
    }

    .bg-danger-custom {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
    }

    /* Buttons */
    .btn-custom {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        display: inline-flex;
        align-items: center;
        gap: 0.3rem;
        color: white;
    }

    .btn-info-custom {
        background: linear-gradient(135deg, #17a2b8, #138496);
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
    }

    .btn-success-custom {
        background: linear-gradient(135deg, #28a745, #218838);
    }

    .btn-danger-custom {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
    }

    .btn-custom:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

    /* Action Buttons Container */
    .action-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        justify-content: flex-end;
    }

    /* Header Action Container */
    .header-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    /* Animations */
    @@keyframes gradientFlow {
        0% {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }
    }

    @@keyframes pulseShadow {
        0% {
            box-shadow: 0 5px 15px rgba(34, 32, 142, 0.3);
        }

        100% {
            box-shadow: 0 15px 30px rgba(34, 32, 142, 0.5);
        }
    }

    @@keyframes gentleFloat {

        0%,
        100% {
            transform: perspective(500px) translateZ(10px);
        }

        50% {
            transform: perspective(500px) translateZ(20px);
        }
    }

    /* Hide cards by default (desktop/tablet) */
    .customer-cards {
        display: none;
    }

    /* Mobile: Card Layout */
    @@media (max-width: 767px) {
        .custom-table {
            display: none;
        }

        .customer-cards {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .customer-card {
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 12px;
            background: rgba(255, 255, 255, 0.1);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 1.2rem;
            display: flex;
            flex-direction: column;
            gap: 0.8rem;
        }

        .customer-card div {
            font-size: 0.95rem;
        }

        .customer-card strong {
            color: #a78bfa;
        }

        .customer-card .action-buttons {
            justify-content: flex-start;
            margin-top: 0.5rem;
        }

        .header-actions {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }
    }

    /* Extra small: icons only */
    @@media (max-width: 480px) {
        .btn-custom {
            width: 40px;
            height: 40px;
            padding: 0;
            justify-content: center;
            font-size: 1rem;
        }

        .btn-custom span {
            display: none;
        }

        .universal-container {
            padding: 1.5rem;
            margin: 1rem;
            border-radius: 20px;
        }

        .page-header {
            font-size: 1.5rem;
        }
    }

    /* Mobile: cards */
    @@media (max-width: 767px) {
        .custom-table {
            display: none;
        }

        .message-cards {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>
