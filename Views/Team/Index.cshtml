@model List<LoanManagementSystem.Models.Team>
@{
    ViewData["Title"] = "Teams";
}

<style>
    /* Main Container - Permanent Effects */
    .universal-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 2.5rem;
        color: white;
        background: linear-gradient(90deg, 
            rgb(0, 0, 0), 
            rgb(34, 32, 142), 
            rgb(0, 0, 0));
        background-size: 200% 200%;
        font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
        border-radius: 30px;
        animation: gradientFlow 3s ease infinite, 
                   pulseShadow 1.5s ease infinite alternate,
                   gentleFloat 4s ease-in-out infinite;
        transform: perspective(500px) translateZ(20px);
        box-shadow: 0 10px 25px rgba(34, 32, 142, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    /* Header - Permanent Underline */
    .page-header {
        position: relative;
        display: inline-block;
        padding-bottom: 5px;
        margin-bottom: 1.5rem;
        font-size: 1.8rem;
    }

    .page-header::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 3px;
        background: linear-gradient(90deg, #6a11cb, #2575fc);
    }

    /* Table Styling - Hidden on mobile */
    .custom-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin: 1.5rem 0;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
        border-radius: 12px;
        overflow: hidden;
    }

    .custom-table thead {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
    }

    .custom-table th {
        padding: 1rem;
        text-align: left;
        font-weight: 600;
        position: relative;
    }

    .custom-table th:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background: rgba(255, 255, 255, 0.3);
    }

    .custom-table td {
        padding: 0.8rem 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .custom-table tr:hover td {
        background: rgba(255, 255, 255, 0.05);
    }

    /* Mobile Cards - Hidden on desktop */
    .mobile-cards {
        display: none;
        margin: 1.5rem 0;
    }

    .team-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .team-card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .team-card-title {
        font-size: 1.2rem;
        font-weight: bold;
        color: #fff;
    }

    .team-card-body {
        margin-bottom: 1rem;
    }

    .team-card-row {
        display: flex;
        margin-bottom: 0.5rem;
    }

    .team-card-label {
        font-weight: bold;
        margin-right: 0.5rem;
        color: #6a11cb;
        min-width: 100px;
    }

    .team-card-value {
        color: #fff;
    }

    /* Buttons */
    .btn-custom {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        display: inline-flex;
        align-items: center;
        gap: 0.3rem;
        margin: 0.2rem;
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        color: white;
    }

    .btn-info-custom {
        background: linear-gradient(135deg, #17a2b8, #138496);
        color: white;
    }

    .btn-danger-custom {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
        color: white;
    }

    .btn-custom:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

    /* Action Buttons Container */
    .action-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .mobile-action-buttons {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    /* Alerts */
    .alert-custom {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .alert-danger-custom {
        background: rgba(231, 76, 60, 0.2);
        border-color: rgba(231, 76, 60, 0.3);
    }

    .alert-success-custom {
        background: rgba(46, 204, 113, 0.2);
        border-color: rgba(46, 204, 113, 0.3);
    }

    .btn-close-custom {
        background: transparent;
        border: none;
        color: white;
        font-size: 1.2rem;
        cursor: pointer;
    }

    /* Animations */
    @@keyframes gradientFlow {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    @@keyframes pulseShadow {
        0% { box-shadow: 0 5px 15px rgba(34, 32, 142, 0.3); }
        100% { box-shadow: 0 15px 30px rgba(34, 32, 142, 0.5); }
    }

    @@keyframes gentleFloat {
        0%, 100% { transform: perspective(500px) translateZ(10px); }
        50% { transform: perspective(500px) translateZ(20px); }
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .universal-container {
            padding: 1.5rem;
            margin: 1rem;
            border-radius: 20px;
            animation: none; /* Disable animations on mobile for performance */
            transform: none;
        }

        .custom-table {
            display: none; /* Hide table on mobile */
        }

        .mobile-cards {
            display: block; /* Show cards on mobile */
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn-custom {
            width: 100%;
            justify-content: center;
        }

        .page-header {
            font-size: 1.5rem;
        }
    }

    @@media (min-width: 769px) {
        .mobile-cards {
            display: none; /* Hide cards on desktop */
        }

        .custom-table {
            display: table; /* Show table on desktop */
        }
    }
</style>

<div class="universal-container">
    <h2 class="page-header">Teams Management</h2>
    
    <a href="/Team/Create" class="btn-custom btn-primary-custom mb-3">
        <i class="bi bi-plus-circle"></i> Create Team
    </a>

    @if (TempData["Error"] != null)
    {
        <div class="alert-custom alert-danger-custom">
            <div>
                <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            </div>
            <button type="button" class="btn-close-custom" data-dismiss="alert" aria-label="Close">
                <i class="bi bi-x"></i>
            </button>
        </div>
    }

    @if (TempData["Message"] != null)
    {
        <div class="alert-custom alert-success-custom">
            <div>
                <i class="bi bi-check-circle-fill"></i> @TempData["Message"]
            </div>
            <button type="button" class="btn-close-custom" data-dismiss="alert" aria-label="Close">
                <i class="bi bi-x"></i>
            </button>
        </div>
    }

    <!-- Desktop Table -->
    <table class="custom-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Created By</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var team in Model)
            {
                <tr>
                    <td>@team.TeamId</td>
                    <td>@team.TeamName</td>
                    <td>@team.Creator?.FullName</td>
                    <td>
                        <div class="action-buttons">
                            <a href="/Team/Members/@team.TeamId" class="btn-custom btn-primary-custom">
                                <i class="bi bi-people-fill"></i> Manage Members
                            </a>
                            <a asp-action="View" asp-route-id="@team.TeamId" class="btn-custom btn-info-custom">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <a asp-action="Delete" asp-route-id="@team.TeamId" class="btn-custom btn-danger-custom"
                                onclick="return confirm('Are you sure you want to delete this team?');">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Mobile Cards -->
    <div class="mobile-cards">
        @foreach (var team in Model)
        {
            <div class="team-card">
                <div class="team-card-header">
                    <div class="team-card-title">@team.TeamName</div>
                    <div class="team-id">ID: @team.TeamId</div>
                </div>
                <div class="team-card-body">
                    <div class="team-card-row">
                        <span class="team-card-label">Created By:</span>
                        <span class="team-card-value">@team.Creator?.FullName</span>
                    </div>
                </div>
                <div class="mobile-action-buttons">
                    <a href="/Team/ManageMembers/@team.TeamId" class="btn-custom btn-primary-custom">
                        <i class="bi bi-people-fill"></i> Manage Members
                    </a>
                    <a asp-action="View" asp-route-id="@team.TeamId" class="btn-custom btn-info-custom">
                        <i class="bi bi-eye"></i> View Team
                    </a>
                    <a asp-action="Delete" asp-route-id="@team.TeamId" class="btn-custom btn-danger-custom"
                       onclick="return confirm('Are you sure you want to delete this team?');">
                        <i class="bi bi-trash"></i> Delete Team
                    </a>
                </div>
            </div>
        }
    </div>
</div>