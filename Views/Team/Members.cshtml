@model LoanManagementSystem.Models.Team
@{
    ViewData["Title"] = "Manage Team Members";
    var allUsers = ViewBag.AllUsers as List<LoanManagementSystem.Models.User>;
}

<style>
    /* Universal Container */
    .universal-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 2.5rem;
        color: white;
        background: linear-gradient(90deg, rgb(0, 0, 0), rgb(34, 32, 142), rgb(0, 0, 0));
        background-size: 200% 200%;
        font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
        border-radius: 30px;
        animation: gradientFlow 3s ease infinite,
                   pulseShadow 1.5s ease infinite alternate,
                   gentleFloat 4s ease-in-out infinite;
        transform: perspective(500px) translateZ(20px);
        box-shadow: 0 10px 25px rgba(34, 32, 142, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    /* Header */
    .page-header {
        position: relative;
        display: inline-block;
        padding-bottom: 5px;
        margin-bottom: 1.5rem;
        font-size: 1.8rem;
    }
    .page-header::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 3px;
        background: linear-gradient(90deg, #6a11cb, #2575fc);
    }

    /* Tables */
    .custom-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin: 1.5rem 0;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
        border-radius: 12px;
        overflow: hidden;
    }
    .custom-table thead {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
    }
    .custom-table th, .custom-table td {
        padding: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    .custom-table tr:hover td {
        background: rgba(255, 255, 255, 0.05);
    }

    /* Buttons */
    .btn-custom {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 0.3rem;
        margin: 0.2rem;
    }
    .btn-primary-custom {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        color: white;
    }
    .btn-danger-custom {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
        color: white;
    }
    .btn-success-custom {
        background: linear-gradient(135deg, #28a745, #218838);
        color: white;
    }
    .btn-custom:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.3);
    }

    /* Animations */
    @@keyframes gradientFlow {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }
    @@keyframes pulseShadow {
        0% { box-shadow: 0 5px 15px rgba(34,32,142,0.3); }
        100% { box-shadow: 0 15px 30px rgba(34,32,142,0.5); }
    }
    @@keyframes gentleFloat {
        0%,100% { transform: perspective(500px) translateZ(10px); }
        50% { transform: perspective(500px) translateZ(20px); }
    }
</style>

<div class="universal-container">
    <h2 class="page-header">üë• Manage Members - @Model.TeamName</h2>

    <!-- Current Members -->
    <h3>üßë‚Äçü§ù‚Äçüßë Current Members</h3>
    <table class="custom-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Role</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Members != null && Model.Members.Any())
            {
                foreach (var member in Model.Members)
                {
                    <tr>
                        <td>@(member.User?.FullName ?? "N/A")</td>
                        <td>@(member.User?.Role ?? "N/A")</td>
                        <td>
                            <form asp-action="RemoveMember" method="post" class="inline">
                                <input type="hidden" name="teamId" value="@Model.TeamId" />
                                <input type="hidden" name="userId" value="@member.UserId" />
                                <button type="submit" class="btn-custom btn-danger-custom">
                                    <i class="bi bi-trash"></i> Remove
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No members yet</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Add Member -->
    <h3 class="mt-4">‚ûï Add New Member</h3>
    <form asp-action="AddMember" method="post" class="space-y-4">
        <input type="hidden" name="teamId" value="@Model.TeamId" />

        <div>
            <label class="block mb-1 font-medium">Select User</label>
            <select name="userId" class="form-select custom-table text-black w-full p-2 rounded">
                <option value="">-- Select User --</option>
                @if (allUsers != null)
                {
                    foreach (var user in allUsers)
                    {
                        if (!Model.Members.Any(m => m.UserId == user.UserId))
                        {
                            <option value="@user.UserId">@user.FullName (@user.Role)</option>
                        }
                    }
                }
            </select>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn-custom btn-success-custom">
                <i class="bi bi-person-plus"></i> Add Member
            </button>
            <a asp-action="Index" class="btn-custom btn-primary-custom">
                <i class="bi bi-arrow-left"></i> Back to Teams
            </a>
        </div>
    </form>
</div>
