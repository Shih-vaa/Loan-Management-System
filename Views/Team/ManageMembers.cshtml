@model LoanManagementSystem.Models.Team
@{
    ViewData["Title"] = "Manage Team Members";
    var availableUsers = ViewBag.AvailableUsers as List<LoanManagementSystem.Models.User>;
}

<style>
    /* Main Container - Permanent Effects */
    .universal-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 2.5rem;
        color: white;
        background: linear-gradient(90deg, 
            rgb(0, 0, 0), 
            rgb(34, 32, 142), 
            rgb(0, 0, 0));
        background-size: 200% 200%;
        font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
        border-radius: 30px;
        animation: gradientFlow 3s ease infinite, 
                   pulseShadow 1.5s ease infinite alternate,
                   gentleFloat 4s ease-in-out infinite;
        transform: perspective(500px) translateZ(20px);
        box-shadow: 0 10px 25px rgba(34, 32, 142, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    /* Header - Permanent Underline */
    .page-header {
        position: relative;
        display: inline-block;
        padding-bottom: 5px;
        margin-bottom: 1.5rem;
        font-size: 1.8rem;
    }

    .page-header::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 3px;
        background: linear-gradient(90deg, #6a11cb, #2575fc);
    }

    /* Section Headers */
    .section-header {
        font-size: 1.4rem;
        margin: 1.5rem 0 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid rgba(106, 17, 203, 0.5);
    }

    /* Form Elements */
    .form-select-custom {
        background: rgba(255, 255, 255, 0.1);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.3);
        padding: 0.5rem 1rem;
        border-radius: 8px;
        width: 100%;
        transition: all 0.3s ease;
    }

    .form-select-custom:focus {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border-color: #6a11cb;
        box-shadow: 0 0 0 0.25rem rgba(106, 17, 203, 0.25);
        transform: translateY(-1px);
    }

    .form-check-custom {
        margin: 0.5rem 0;
        display: flex;
        align-items: center;
    }

    .form-check-input-custom {
        width: 1.2em;
        height: 1.2em;
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
        margin-right: 0.5rem;
        transition: all 0.3s ease;
    }

    .form-check-input-custom:checked {
        background-color: #6a11cb;
        border-color: #6a11cb;
    }

    .form-check-label {
        user-select: none;
    }

    /* Buttons */
    .btn-custom {
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.3rem;
    }

    .btn-custom:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, #6a11cb, #2575fc);
        color: white;
    }

    .btn-secondary-custom {
        background: linear-gradient(135deg, #6c757d, #495057);
        color: white;
    }

    .btn-danger-custom {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
        color: white;
    }

    /* Badges */
    .badge-custom {
        padding: 0.35rem 0.65rem;
        border-radius: 8px;
        font-weight: 500;
        margin-right: 0.3rem;
        margin-bottom: 0.3rem;
        display: inline-block;
        transition: all 0.2s ease;
    }

    .badge-custom:hover {
        transform: scale(1.05);
    }

    /* Table Styling */
    .custom-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin: 1.5rem 0;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
        border-radius: 12px;
        overflow: hidden;
    }

    .custom-table thead {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
    }

    .custom-table th {
        padding: 1rem;
        text-align: left;
        font-weight: 600;
        position: relative;
    }

    .custom-table th:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background: rgba(255, 255, 255, 0.3);
    }

    .custom-table td {
        padding: 0.8rem 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .custom-table tr:hover td {
        background: rgba(255, 255, 255, 0.05);
    }

    /* Mobile Cards */
    .mobile-cards {
        display: none;
        margin: 1.5rem 0;
    }

    .member-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
    }

    .member-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(106, 17, 203, 0.3);
    }

    .member-card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .member-card-title {
        font-size: 1.2rem;
        font-weight: bold;
        color: #fff;
    }

    .permissions-container {
        margin: 1rem 0;
    }

    /* Animations */
    @@keyframes gradientFlow {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    @@keyframes pulseShadow {
        0% { box-shadow: 0 5px 15px rgba(34, 32, 142, 0.3); }
        100% { box-shadow: 0 15px 30px rgba(34, 32, 142, 0.5); }
    }

    @@keyframes gentleFloat {
        0%, 100% { transform: perspective(500px) translateZ(10px); }
        50% { transform: perspective(500px) translateZ(20px); }
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .universal-container {
            padding: 1.5rem;
            margin: 1rem;
            border-radius: 20px;
            animation: none;
            transform: none;
        }

        .custom-table {
            display: none;
        }

        .mobile-cards {
            display: block;
        }

        .form-row {
            flex-direction: column;
        }

        .form-col {
            width: 100%;
            margin-bottom: 1rem;
        }

        .btn-custom {
            width: 100%;
        }

        .page-header {
            font-size: 1.5rem;
        }
    }

    @@media (min-width: 769px) {
        .mobile-cards {
            display: none;
        }

        .custom-table {
            display: table;
        }
    }
</style>

<div class="universal-container">
    <h2 class="page-header">Manage Team: @Model.TeamName</h2>

    <!-- Add Member Section -->
    <h4 class="section-header">âž• Add New Member</h4>
    <form method="post" asp-action="AddMember" class="mt-3">
        <input type="hidden" name="teamId" value="@Model.TeamId" />
        <div class="row mb-3">
            <div class="col-md-8">
                <select name="userId" class="form-select-custom">
                    @foreach (var user in availableUsers)
                    {
                        <option value="@user.UserId">@user.FullName (@user.Role)</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn-custom btn-primary-custom w-100">
                    <i class="bi bi-person-plus"></i> Add Member
                </button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-check form-check-custom">
                    <input class="form-check-input form-check-input-custom" type="checkbox" name="canManageLeads" value="true" id="leadsCheck">
                    <label class="form-check-label" for="leadsCheck">Can Manage Leads</label>
                </div>
                <div class="form-check form-check-custom">
                    <input class="form-check-input form-check-input-custom" type="checkbox" name="canUploadDocs" value="true" id="uploadCheck">
                    <label class="form-check-label" for="uploadCheck">Can Upload Docs</label>
                </div>
                <div class="form-check form-check-custom">
                    <input class="form-check-input form-check-input-custom" type="checkbox" name="canVerifyDocs" value="true" id="verifyCheck">
                    <label class="form-check-label" for="verifyCheck">Can Verify Docs</label>
                </div>
            </div>
        </div>
    </form>

    <!-- Current Members Section -->
    <h4 class="section-header">ðŸ‘¥ Current Members</h4>

    <!-- Desktop Table -->
    <table class="custom-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Role</th>
                <th>Permissions</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model.Members)
            {
                <tr>
                    <td>@member.User?.FullName</td>
                    <td>@member.User?.Role</td>
                    <td>
                        @if (member.CanManageLeads)
                        {
                            <span class="badge-custom" style="background: linear-gradient(135deg, #6a11cb, #2575fc);">Manage Leads</span>
                        }
                        @if (member.CanUploadDocs)
                        {
                            <span class="badge-custom" style="background: linear-gradient(135deg, #28a745, #20c997);">Upload Docs</span>
                        }
                        @if (member.CanVerifyDocs)
                        {
                            <span class="badge-custom" style="background: linear-gradient(135deg, #ffc107, #fd7e14); color: #212529;">Verify Docs</span>
                        }
                        @if (!member.CanManageLeads && !member.CanUploadDocs && !member.CanVerifyDocs)
                        {
                            <span class="text-muted">No permissions</span>
                        }
                    </td>
                    <td>
                        <form method="post" asp-action="RemoveMember" class="d-inline">
                            <input type="hidden" name="teamId" value="@Model.TeamId" />
                            <input type="hidden" name="userId" value="@member.UserId" />
                            <button type="submit" class="btn-custom btn-danger-custom"
                                onclick="return confirm('Remove this user from team?')">
                                <i class="bi bi-person-dash"></i> Remove
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Mobile Cards -->
    <div class="mobile-cards">
        @foreach (var member in Model.Members)
        {
            <div class="member-card">
                <div class="member-card-header">
                    <div class="member-card-title">@member.User?.FullName</div>
                    <div class="member-role">@member.User?.Role</div>
                </div>
                <div class="member-card-body">
                    <div class="permissions-container">
                        @if (member.CanManageLeads)
                        {
                            <span class="badge-custom" style="background: linear-gradient(135deg, #6a11cb, #2575fc);">Manage Leads</span>
                        }
                        @if (member.CanUploadDocs)
                        {
                            <span class="badge-custom" style="background: linear-gradient(135deg, #28a745, #20c997);">Upload Docs</span>
                        }
                        @if (member.CanVerifyDocs)
                        {
                            <span class="badge-custom" style="background: linear-gradient(135deg, #ffc107, #fd7e14); color: #212529;">Verify Docs</span>
                        }
                        @if (!member.CanManageLeads && !member.CanUploadDocs && !member.CanVerifyDocs)
                        {
                            <span class="text-muted">No permissions</span>
                        }
                    </div>
                    <form method="post" asp-action="RemoveMember" class="mt-2">
                        <input type="hidden" name="teamId" value="@Model.TeamId" />
                        <input type="hidden" name="userId" value="@member.UserId" />
                        <button type="submit" class="btn-custom btn-danger-custom w-100"
                            onclick="return confirm('Remove this user from team?')">
                            <i class="bi bi-person-dash"></i> Remove Member
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>

    <a class="btn-custom btn-secondary-custom mt-3" asp-action="Index">
        <i class="bi bi-arrow-left"></i> Back to Teams
    </a>
</div>